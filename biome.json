{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": [".vscode/**", ".husky/**"],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noGlobalIsFinite": "off"
      }
    }
  },
  "formatter": {
    "ignore": [".husky/**"],
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "arrowParentheses": "asNeeded"
    },
    "jsxRuntime": "reactClassic"
  },
  "overrides": [
    {
      "include": ["src/**/demo/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ]
}
