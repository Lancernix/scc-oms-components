{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "prettier.enable": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  // 是否启用格式化
  "markdownFormatter.enable": true,
  // 将配置里的全角符号转化为半角符号, 例如 `，：；！“”‘’（）？。`
  // 当设置为 '_' 或者 '' 的时候, 不转换符号
  // 当设置为 'auto' 的时候, 自动根据上下文转换符号
  "markdownFormatter.fullWidthTurnHalfWidth": "",
  // 格式化无序列表的符号
  "markdownFormatter.formatULSymbol": true,
  // * > + > -
  // 各种符号后是否需要空格
  "markdownFormatter.spaceAfterFullWidthOrHalfWidth": "half",
  // 是否格式化表格
  "markdownFormatter.formatTable": true,
  "[markdown]": {
    // 快速补全
    "editor.defaultFormatter": "mervin.markdown-formatter",
    "editor.renderWhitespace": "all",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  // 这里最好配置一下具体语言的格式化工具，如果只设置`editor.defaultFormatter`，有可能被编辑器的语言配置覆盖
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}
